<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_register"
    android:background="@drawable/fondo_maw"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.camilomontoya.menatweapons_cliente.RegisterActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/logo3"
        android:layout_marginTop="55dp"
        android:id="@+id/logo"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="S I G N   I N"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="53dp"
        android:id="@+id/Login"
        android:fontFamily="sans-serif"
        android:textColor="@android:color/background_light"
        android:textSize="22sp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/userR"
        android:hint="Usuario"
        android:layout_below="@+id/Login"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:textColor="@color/colorWeaponAccent"
        android:theme="@style/WeaponTheme"
        android:backgroundTint="@color/colorWeaponPrimary"
        android:textAppearance="@android:style/TextAppearance.Material.Medium"
        android:textColorHighlight="@color/colorWeaponAccent"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:hint="ContraseÃ±a"
        android:layout_marginTop="21dp"
        android:id="@+id/passwordR"
        android:textColor="@color/colorWeaponAccent"
        android:textAppearance="@android:style/TextAppearance.Material.Medium"
        android:theme="@style/WeaponTheme"
        android:backgroundTint="@color/colorWeaponPrimary"
        android:layout_below="@+id/userR"
        android:layout_alignStart="@+id/userR" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:hint="Confirmar"
        android:id="@+id/passwordConfirm"
        android:textColor="@color/colorWeaponAccent"
        android:textAppearance="@android:style/TextAppearance.Material.Medium"
        android:theme="@style/WeaponTheme"
        android:backgroundTint="@color/colorWeaponPrimary"
        android:layout_below="@+id/passwordR"
        android:layout_alignStart="@+id/passwordR"
        android:layout_marginTop="30dp"
        android:textColorHighlight="@color/colorWeaponAccent"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/back"
        android:id="@+id/back"
        android:background="#00000000"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/register"
        android:id="@+id/registrar"
        android:scaleX="0.8"
        android:scaleY="0.8"
        android:background="#00000000"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="33dp" />
</RelativeLayout>
